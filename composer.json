{
    "name": "vesperabr/validation",
    "description": "A awesome set of PHP validation classes.",
    "keywords": [
        "vespera",
        "validation",
        "validator",
        "cpf",
        "cnpj",
        "php",
        "laravel"
    ],
    "type": "library",
    "license": "MIT",
    "homepage": "https://github.com/vesperabr/validation",
    "authors": [
        {
            "name": "Ricardo Monteiro",
            "email": "ricardo.monteiro@vespera.com.br"
        }
    ],
    "require": {
        "php": "^7.3|^8.0",
        "illuminate/support": "^7.0|^8.0"
    },
    "require-dev": {
        "orchestra/testbench": "^6.20",
        "phpunit/phpunit": "^9.4.4"
    },
    "autoload": {
        "psr-4": {
            "Vespera\\Validation\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Vespera\\Validation\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Vespera\\Validation\\Support\\ServiceProvider"
            ]
        }
    }
}
